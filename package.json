{
  "name": "penguin-magic",
  "private": true,
  "version": "1.4.1",
  "description": "企鹅工坊 - AI 图像创意管理应用",
  "author": "PenguinCreative",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "electron:dev": "concurrently \"cd backend-nodejs && npm start\" \"npm run dev\" \"wait-on http://localhost:5176 http://localhost:8765 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "package": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --x64",
    "package:all": "npm run build && electron-builder -mwl",
    "upload": "node release-uploader/upload.cjs",
    "release": "npm run package && npm run upload"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "@types/three": "^0.182.0",
    "@xyflow/react": "^12.10.0",
    "electron-updater": "^6.7.3",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.5.3",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@types/pngjs": "^6.0.5",
    "basic-ftp": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "icojs": "^0.20.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "png-to-ico": "^3.0.1",
    "pngjs": "^7.0.0",
    "rcedit": "^5.0.2",
    "ssh2-sftp-client": "^12.0.1",
    "ts-jest": "^29.4.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.penguin.magic",
    "productName": "PenguinMagic",
    "afterPack": "./scripts/afterPack.cjs",
    "publish": {
      "provider": "generic",
      "url": "http://updates.pebbling.cn/"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend-nodejs/src/**/*",
      "backend-nodejs/data/**/*",
      "backend-nodejs/package.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "backend-nodejs/node_modules",
        "to": "app.asar.unpacked/backend-nodejs/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "backend-nodejs/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico",
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "installerSidebar": "resources/installerSidebar.bmp"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.ico",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.ico",
      "category": "Graphics"
    }
  }
}
