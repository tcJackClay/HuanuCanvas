# HuanuCanvas 测试环境配置
# 复制此文件为 .env.staging.local 并修改其中的值

NODE_ENV=staging

# 应用信息
APP_NAME=PenguinMagic
APP_VERSION=1.4.1
DOMAIN=staging.huanu.example.com

# 端口配置
FRONTEND_HOST_PORT=80
FRONTEND_SSL_PORT=443
BACKEND_HOST_PORT=8765
PROMETHEUS_HOST_PORT=9090
GRAFANA_HOST_PORT=3000
REDIS_HOST_PORT=6379
POSTGRES_HOST_PORT=5432

# 测试环境特性
LOG_LEVEL=info
HOT_RELOAD=false
SOURCE_MAPS=false

# 数据库配置
POSTGRES_DB=huanu_staging
POSTGRES_USER=huanu_staging
POSTGRES_PASSWORD=staging_secure_password_123

# Redis配置
REDIS_PASSWORD=staging_redis_secure_password

# 监控配置
GRAFANA_PASSWORD=staging_admin_secure_123
ENABLE_MONITORING=true

# API密钥 (需要替换)
GEMINI_API_KEY=your_staging_gemini_api_key_here

# 安全密钥 (需要替换)
JWT_SECRET=staging_jwt_secret_key_32_chars_minimum_secure
SESSION_SECRET=staging_session_secret_key_32_chars_minimum

# SSL配置
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/staging-cert.pem
SSL_KEY_PATH=./ssl/staging-key.pem

# 文件路径
UPLOAD_PATH=/opt/huanu-canvas/uploads
TEMP_PATH=/opt/huanu-canvas/temp

# 性能配置
MAX_MEMORY_USAGE=768MB
MAX_CPU_USAGE=375m
MAX_CONCURRENT_REQUESTS=15
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=150

# 安全配置
ALLOWED_ORIGINS=https://staging.huanu.example.com,https://*.staging.huanu.example.com
HSTS_ENABLED=true
SECURITY_HEADERS_ENABLED=true