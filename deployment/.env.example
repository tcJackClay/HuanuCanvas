# HuanuCanvas 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===== 基础配置 =====
NODE_ENV=production
APP_NAME=PenguinMagic
APP_VERSION=1.4.1

# ===== API密钥 =====
# Google Gemini API密钥 (必需)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== 服务端口 =====
FRONTEND_PORT=80
BACKEND_PORT=8765

# ===== 数据库配置 (可选) =====
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgresql://huanu:your_password@postgres:5432/huanu

# ===== 监控配置 =====
GRAFANA_PASSWORD=admin_password
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090

# ===== 存储路径 =====
DATA_PATH=/app/data
INPUT_PATH=/app/input
OUTPUT_PATH=/app/output
CREATIVE_IMAGES_PATH=/app/creative_images
THUMBNAILS_PATH=/app/thumbnails

# ===== SSL配置 =====
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ===== 性能配置 =====
MAX_MEMORY_USAGE=1GB
MAX_CPU_USAGE=500m
CONCURRENT_REQUESTS=10

# ===== 安全配置 =====
ALLOWED_ORIGINS=https://yourdomain.com
SESSION_SECRET=your_session_secret_key
JWT_SECRET=your_jwt_secret_key

# ===== 邮件配置 (可选) =====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# ===== 外部服务 =====
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id
