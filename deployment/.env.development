# HuanuCanvas 开发环境配置
# 复制此文件为 .env.development.local 并修改其中的值

NODE_ENV=development

# 应用信息
APP_NAME=PenguinMagic
APP_VERSION=1.4.1
DOMAIN=localhost

# 端口配置
FRONTEND_HOST_PORT=3000
FRONTEND_SSL_PORT=3443
BACKEND_HOST_PORT=8765
PROMETHEUS_HOST_PORT=9090
GRAFANA_HOST_PORT=3000
REDIS_HOST_PORT=6379
POSTGRES_HOST_PORT=5432

# 开发特性
LOG_LEVEL=debug
HOT_RELOAD=true
SOURCE_MAPS=true
DEBUG_MODE=true

# 数据库配置
POSTGRES_DB=huanu_dev
POSTGRES_USER=huanu_dev
POSTGRES_PASSWORD=dev_password_123

# Redis配置
REDIS_PASSWORD=

# 监控配置
GRAFANA_PASSWORD=admin
ENABLE_MONITORING=true

# API密钥 (需要替换)
GEMINI_API_KEY=your_development_gemini_api_key_here

# 安全密钥 (需要替换)
JWT_SECRET=development_jwt_secret_key_32_chars_minimum
SESSION_SECRET=development_session_secret_key_32_chars

# SSL配置 (开发环境可禁用)
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/dev-cert.pem
SSL_KEY_PATH=./ssl/dev-key.pem

# 文件路径
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# 性能配置
MAX_MEMORY_USAGE=512MB
MAX_CPU_USAGE=250m
MAX_CONCURRENT_REQUESTS=20
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200